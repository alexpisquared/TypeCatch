          <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="-90"/>
            <TranslateTransform/>
          </TransformGroup>
        </Grid.RenderTransform>
        <Viewbox    Width="60"  VerticalAlignment="Top" >
          <DataGrid ItemsSource="{Binding PrgsChart}" AutoGenerateColumns="False"  Width="210.0" MinHeight="100" HorizontalAlignment="Right" VerticalAlignment="Bottom"   EnableRowVirtualization="True"  Margin="0"
