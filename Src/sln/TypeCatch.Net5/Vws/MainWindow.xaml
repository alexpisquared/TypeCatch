                     Text="{Binding InfoMsg, FallbackValue='···'}" 
                     FontSize="13" VerticalAlignment="Bottom"    HorizontalAlignment="Right" Margin="5"
                     ToolTip="InfoMsg" />

    </Grid>
  </Border>
